<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.quiz.controller.LoginController"
            styleClass="root">
            
    <HBox alignment="CENTER" spacing="50" AnchorPane.topAnchor="0.0" 
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0">
        
        <!-- Left Side - Login Form -->
        <VBox styleClass="login-form-container" spacing="15">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>
            
            <Text text="Welcome back" styleClass="title"/>
            <Text text="Login to your account" styleClass="subtitle"/>
            
            <VBox spacing="10">
                <Text text="Email" styleClass="label-text"/>
                <TextField fx:id="emailField" styleClass="input-field"
                          promptText="Enter your email"/>
            </VBox>
            
            <VBox spacing="10">
                <Text text="Password" styleClass="label-text"/>
                <PasswordField fx:id="passwordField" styleClass="input-field"
                             promptText="Enter your password"/>
            </VBox>
            
            <Button text="Login" onAction="#handleLogin" 
                    styleClass="login-button"/>
            
            <HBox spacing="10" alignment="CENTER">
                <Text text="Don't have an account?" styleClass="text"/>
                <Button text="Sign up" onAction="#handleSignup" 
                        styleClass="signup-button"/>
            </HBox>
        </VBox>
        
        <!-- Right Side - Logo -->
        <VBox styleClass="logo-container" alignment="CENTER">
            <ImageView fx:id="logoImage" fitWidth="300" fitHeight="300" 
                      preserveRatio="true">
                <Image url="@../images/logo.png"/>
            </ImageView>
        </VBox>
        
    </HBox>
</AnchorPane>