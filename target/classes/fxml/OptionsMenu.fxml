      fx:controller="com.quiz.controller.OptionsMenuController"
      styleClass="options-container" 
      spacing="10" 
      alignment="CENTER"
      minWidth="300"
      stylesheets="@../styles/OptionsMenu.css">
    
    <!-- Header -->
    <Label text="Options" 
           styleClass="options-title"/>
    
    <!-- Menu Container -->
    <VBox spacing="10" styleClass="menu-container">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        
        <Button text="Retourner" 
                onAction="#handleReturn" 
                styleClass="menu-button"
                maxWidth="Infinity"/>
                
        <Button text="New Game" 
                onAction="#handleNewGame" 
                styleClass="menu-button"
                maxWidth="Infinity"/>
                
