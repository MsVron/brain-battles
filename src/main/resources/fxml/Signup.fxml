<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20px;" xmlns:fx="http://javafx.com/fxml" fx:controller="com.quiz.controller.SignupController">
    <!-- Title Label -->
    <Label text="Créer un compte" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    
    <!-- Full Name TextField -->
    <TextField fx:id="nameField" promptText="Nom complet" style="-fx-pref-width: 300px; -fx-padding: 10px; -fx-font-size: 14px; -fx-background-radius: 5px;" />
    
    <!-- Email TextField -->
    <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 300px; -fx-padding: 10px; -fx-font-size: 14px; -fx-background-radius: 5px;" />
    
    <!-- Password PasswordField -->
    <PasswordField fx:id="passwordField" promptText="Mot de passe" style="-fx-pref-width: 300px; -fx-padding: 10px; -fx-font-size: 14px; -fx-background-radius: 5px;" />
    
    <!-- Confirm Password PasswordField -->
    <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" style="-fx-pref-width: 300px; -fx-padding: 10px; -fx-font-size: 14px; -fx-background-radius: 5px;" />
    
    <!-- Signup Button -->
    <Button text="Créer le compte" onAction="#handleSignup" style="-fx-pref-width: 300px; -fx-padding: 10px; -fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5px;" />
    
    <!-- Back to Login Hyperlink -->
    <Hyperlink text="Déjà un compte ? Se connecter" onAction="#goToLogin" style="-fx-font-size: 14px; -fx-text-fill: #0066CC; -fx-font-weight: bold;" />
</VBox>
